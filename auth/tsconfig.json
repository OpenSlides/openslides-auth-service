{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "build",
        "sourceMap": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "ES2021",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "strictPropertyInitialization": false,
        "types": ["node", "jest"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/**/*.spec.ts", "test"]
}
